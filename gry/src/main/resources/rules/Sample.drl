rule "Init"
    when   
    	f : Frame() &&  m : Message( mes==null )
    then
    	JLabel l1 = new JLabel("What type of games are you looking for?");
    	JRadioButton rb1 = new JRadioButton("Party Game");
    	JRadioButton rb2 = new JRadioButton("Horror Game");
    	JRadioButton rb3 = new JRadioButton("Wargame");
		JPanel p = new JPanel();
		ButtonGroup g = new ButtonGroup();
		g.add(rb1);
		g.add(rb2);
		g.add(rb3);
		p.add(l1, BorderLayout.NORTH);
		p.add(rb1);
		p.add(rb2);
		p.add(rb3);
		f.add(p, BorderLayout.CENTER);   		
        f.setVisible(true);       
        f.Action3(rb1, rb2, rb3, "Party Game", "Horror Game", "Wargame", g);
        System.out.println(f.getOdp() + "Init"); 
        m.setMes(f.getOdp());
        update(m);
        update(f);
            
end

